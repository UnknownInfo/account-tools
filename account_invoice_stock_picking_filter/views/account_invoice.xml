<odoo>
    <data>
        <record id="view_invoice_supplier_purchase_picking_form" model="ir.ui.view">
            <field name="model">account.invoice</field>
            <field name="name">account.invoice.form.purchase.picking.form</field>
            <field name="inherit_id" ref="purchase.view_invoice_supplier_purchase_form"/>
            <field name="arch" type="xml">
                <field name="purchase_id" position="after">
                    <field name="picking_ids"
                           domain="[
                           ('picking_type_code', '=', 'incoming'),
                           ('state', '=', 'done'),
                           '|',
                           ('partner_id', 'child_of', partner_id),
                           ('partner_id', '=', partner_id)
                           ]"
                           widget="many2many_tags"/>
                </field>
            </field>
        </record>
    </data>
</odoo>